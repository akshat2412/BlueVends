@model BlueVends.Presentation.ViewModels.ProductsSearchResultViewModel

@{
    ViewBag.Title = "SearchProducts";
}

<h2>Search Results</h2>

<div>
    <h4>Your search " @ViewBag.SearchString "</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<p>
    <div class="row row-pb-md">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-3 col-lg-3 mb-4 text-center">
                <div class="product-entry border">
                    <a href="@Url.Action("ProductDetail", "Products", new { ProductID = product.ID})">
                        <img src="@product.ImageURL" class="img-fluid" alt="Free html5 bootstrap 4 template" style=" height:160px;width:140px;">
                    </a>
                    <div class="desc">
                        <h2><a href="@Url.Action("ProductDetail", "Products", new { ProductID = product.ID})">@product.Name</a></h2>
                        <span class="price">$@product.ListingPrice</span>
                    </div>
                    @if(product.Discount != 0)
                    {
                        <p>Discount Available</p>
                    }
                </div>
            </div>
        }
    </div>
</p>
